{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [
    {
    "target": "client",
    "public": "client",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
    },
    {
      "target": "management",
      "public": "management",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
      }
],
  "emulators": {
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
